---
import Layout from "../layouts/Layout.astro";
import logo from "../assets/logo.svg";
import Auth from "../views/Auth.svelte";
---

<Layout title="AtLeave">
  <main>
    <div class="div1 div">
      <img src={logo} alt={logo} />
      <div class="title">
        <h2>AtLeave</h2>
        <h6>Your go to travel partner</h6>
      </div>
    </div>
    <div class="div"><Auth client:only="svelte" /></div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    width: 100vw;
    height: 90vh;
    align-items: center;
    justify-content: center;
  }

  .div {
    width: 43%;
    height: 75%;
  }

  .div1 {
    display: flex;
    flex-flow: column nowrap;
    overflow-y: hidden;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .div1 > img {
    width: 30%;
  }

  .div1 > .title {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    height: 20%;
    margin-top: 20px;
    gap: 15px;
  }

  .div1 > .title > h2 {
    margin: 0px;
    font-size: 42px;
    font-weight: 600;
  }

  .div1 > .title > h6 {
    margin: 0px;
    font-size: 20px;
    font-weight: 400;
  }
</style>
